from math import floor

def sqrt(result):
    if result < 2: return result

    left = 2
    right = result / 2

    while (left <= right):
        mid = floor((left + right) / 2)
        guess = mid * mid

        if guess > result:
            right -= 1
        elif guess < result:
            left += 1
        else:
            return mid
    
    return right


if __name__ == "__main__":
    result = int(input())
    print(sqrt(result))